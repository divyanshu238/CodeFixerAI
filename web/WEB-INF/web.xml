<?xml version="1.0" encoding="UTF-8"?>

<!--
    web.xml is the deployment descriptor for the servlet-based application.

    Even though we are using @WebServlet annotations,
    this file is included to:
    - Demonstrate understanding of servlet architecture
    - Make the project review-ready
    - Provide compatibility with servlet containers

    This is especially important for academic evaluation.
-->

<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="
         https://jakarta.ee/xml/ns/jakartaee
         https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">

    <!--
        Display name of the web application.
        This name may appear in server logs.
    -->
    <display-name>CodeFixer AI Web Application</display-name>

    <!--
        No explicit servlet mapping is required here
        because we are using @WebServlet annotations
        inside the servlet class.
    -->

</web-app>